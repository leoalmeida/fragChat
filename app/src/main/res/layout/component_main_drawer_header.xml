<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_drawer_size"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_header5" />

    <ImageView
        android:id="@+id/drawer_profile_photo"
        android:layout_width="@dimen/profilephoto_big"
        android:layout_height="@dimen/profilephoto_big"
        android:src="@drawable/profile_demo_2"
        android:background="@drawable/draw_circular_border_imageview"
        android:elevation="@dimen/header_profile_elevation"
        android:layout_marginStart="@dimen/main_padding_5x"
        android:layout_marginTop="@dimen/main_padding_6x"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/not_connected_icon"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:layout_width="@dimen/header_profilephoto_size"
        android:layout_height="@dimen/header_profilephoto_size"
        android:background="@drawable/draw_circular_border_imageview"
        android:elevation="@dimen/header_main_elevation"
        android:padding="@dimen/main_padding_triple"
        android:layout_marginStart="@dimen/main_padding_5x"
        android:layout_marginTop="@dimen/main_padding_6x"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/draw_small_cardbox"
        android:paddingLeft="@dimen/main_padding_quad"
        android:paddingRight="@dimen/main_padding_8x"
        android:gravity="start"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/main_padding"
            android:gravity="start"
            android:text="@string/nome"
            android:elegantTextHeight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/main_big_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/email_user"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="@dimen/main_small_title"
            android:textStyle="bold"  />
    </LinearLayout>
</RelativeLayout>