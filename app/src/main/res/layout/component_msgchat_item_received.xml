<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msglayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_profile_photo"
        android:layout_width="@dimen/profilephoto_big"
        android:layout_height="@dimen/profilephoto_big"
        android:src="@drawable/profile_demo_2"
        android:background="@drawable/draw_circular_border_imageview"
        android:elevation="@dimen/header_profile_elevation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/msgview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profilephoto_big"
        android:layout_marginTop="@dimen/main_padding"
        android:layout_marginStart="@dimen/main_padding_10x"
        android:layout_marginEnd="@dimen/main_padding"
        android:background="@drawable/chat_bubble_gray"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/main_padding"
        android:paddingStart="@dimen/main_padding_10x"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/main_smallest_title" />
        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/main_small_title"
            android:maxLines="4"/>

    </LinearLayout>

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msgview"
        android:layout_alignParentStart="true"
        android:text="@string/textview"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/main_small_text"
        android:layout_marginTop="@dimen/main_padding"
        android:layout_marginStart="@dimen/main_padding_6x"
        />
</RelativeLayout>
